<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChatMessageActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"></LinearLayout>
    <include layout="@layout/toolbar_chat_msg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:padding="20dp"
        android:background="@color/white"
        android:orientation="horizontal">
      <ImageView
          android:layout_width="28dp"
          android:layout_height="28dp"
          android:background="@drawable/profile_icon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ryan Wilson"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:textColor="@color/dark_gry"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="right"
            android:textSize="16dp"
            android:text="Room No."
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="16dp"
            android:text="1074"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="119dp"/>
    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stackFromBottom="true"
        android:background="@color/white"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:divider="@color/white"
        android:transcriptMode="normal"
        android:dividerHeight="0dp"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="70dp"
        />
    <LinearLayout
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:weightSum="1"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:paddingRight="5dp"
        android:background="@drawable/message_box"
        >
        <ImageView
            android:id="@+id/cembt"
            android:layout_height="23dp"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:onClick="CemeraBt"
            android:src="@drawable/gallery_icon"
            />
        <EditText
            android:id="@+id/msg"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="16dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:hint="Message"
            />
        <TextView
            android:id="@+id/chatbt"
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:onClick="ChatBt"
            android:layout_marginRight="5dp"
            android:textColor="@color/icon_color"
            android:text="Send"
            android:textSize="20dp"
            android:layout_weight=".15"
            />
    </LinearLayout>
</RelativeLayout>
